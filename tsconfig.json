{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "es2015",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "src/*": ["./src/*"],
      "src/components/*": ["./src/components/*"],
      "src/hooks/*": ["./src/hooks/*"],
      "src/constant": ["./src/constant/*"],
      "src/queries": ["./src/queries/*"],
      "src/repositories": ["./src/repositories/*"],
      "src/config": ["./src/config/*"]
    },
    "baseUrl": "."
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "@types/image.d.ts", "@types/font.d.ts"],
  "exclude": ["node_modules"]
}
